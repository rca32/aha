<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.ionicframework.ahaapp394290" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>ahaTV</name>
  <description>
        aHa 경제TV
    </description>
  <author email="rca32@yna.co.kr" href="http://www.einfomax.co.kr/">
      Infomax Corp. 
    </author>
  <content src="index.html"/>
  <access origin="*"/>

  <platform name="android">

      <splash src="res/android/splash_xlarge.png" />
      <splash src="res/android/splash_small.png" density="ldpi"/>
      <splash src="res/android/splash_medium.png" density="mdpi"/>
      <splash src="res/android/splash_large.png" density="hdpi"/>
      <splash src="res/android/splash_xlarge.png" density="xhdpi"/>
      <splash src="res/android/splash_xlarge.png" density="xxhdpi"/>


      <icon src="res/android/icon_xxhdpi.png" />
      <icon src="res/android/icon_ldpi.png" density="ldpi" />
      <icon src="res/android/icon_mdpi.png" density="mdpi" />
      <icon src="res/android/icon_hdpi.png" density="hdpi" />
      <icon src="res/android/icon_xhdpi.png" density="xhdpi" />
      <icon src="res/android/icon_xxhdpi.png" density="xxhdpi" />

  </platform>

  <platform name="ios">
               <!-- iOS 8.0+ -->
               <!-- iPhone 6 Plus  -->
<!--                <icon src="res/ios/icon-60@3x.png" width="180" height="180" /> -->
               <!-- iOS 7.0+ -->
               <!-- iPhone / iPod Touch  -->
               <icon src="res/ios/icon-60.png" width="60" height="60" />
               <icon src="res/ios/icon-60@2x.png" width="120" height="120" />
              
               <!-- iOS 6.1 -->
               <!-- Spotlight Icon -->
               <icon src="res/ios/icon-40.png" width="40" height="40" />
               <icon src="res/ios/icon-40@2x.png" width="80" height="80" />
               <!-- iPhone / iPod Touch -->
               <icon src="res/ios/icon.png" width="57" height="57" />
               <icon src="res/ios/icon@2x.png" width="114" height="114" />
            
               <!-- iPhone Spotlight and Settings Icon -->
               <icon src="res/ios/icon-small.png" width="29" height="29" />
               <icon src="res/ios/icon-small@2x.png" width="58" height="58" />

              <splash src="res/ios/Default~iphone.png" width="320" height="480"/>
              <splash src="res/ios/Default@2x~iphone.png" width="640" height="960"/>
              <splash src="res/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
             
      </platform>

  <preference name="SplashScreen" value="screen" />
  <preference name="SplashScreenDelay" value="2000" />

  <preference name="webviewbounce" value="false"/>
  <preference name="UIWebViewBounce" value="false"/>
  <preference name="DisallowOverscroll" value="true"/>
  <preference name="BackupWebStorage" value="none"/>
  <feature name="StatusBar">
    <param name="ios-package" value="CDVStatusBar" onload="true"/>
  </feature>
</widget>